<UserControl x:Class="배탈의민족_Client.FoodSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:배탈의민족_Client"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid Background="White">
        <local:CountControler x:Name="FoodCounter" MouseDown="FoodCounter_MouseDown" HorizontalAlignment="Left" Height="50" Margin="490,14,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="FoodName" HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" Text="베이컨 피자" VerticalAlignment="Top" FontSize="50" Width="480" FontWeight="Bold"/>
        <TextBlock x:Name="PriceTextBox" HorizontalAlignment="Left" Margin="490,65,0,0" TextWrapping="Wrap" Text="0\" VerticalAlignment="Top" Width="100" FontWeight="Bold" Height="16"/>

    </Grid>
</UserControl>
